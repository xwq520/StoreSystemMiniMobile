.myAddress{
  width: 100%;
  background-color: white;
  border-top: 4px solid rgba(245,245,245,1);
  color:#333;
}
.myAddress .cont{
  border-bottom: 1px solid rgba(245,245,245,0.8);
}
.myAddress .cont span{
  display: inline-block;
  color: #333;
  line-height: 0.88rem;
  margin-left: 0.32rem;
}
.myAddress .cont section{
  float:left;
}
.myAddress .cont p{
  display: inline-block;
  color: #333333;
  line-height: 0.88rem;
  margin-left: 1rem;
}
.myAddress .cont .pic2{
  float: right;
  width: 0.14rem;
  height: 0.24rem;
  margin: 0.32rem 0.32rem 0.32rem 0;
}
.myAddress .cont p.text{
  margin-left: 0.72rem;
}
.showChose{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  z-index: 30000;
  background:rgba(77,82,113,0.8);
}
.address{
  position:absolute;
  bottom:0;
  left:0;
  z-index:121;
  height: 350px;
  background:#fff;
  width:100%;
  padding-bottom: 70px;
}
.title h4{
  display:inline-block;
  margin-left:3.2rem;
  line-height:0.88rem;
  font-weight:normal;
}
.title span{
  margin: 0.42rem 0 0 2.2rem;
  line-height: 0.34rem;
  color: #d8d8d8;
  float: right;
  margin-right: 20px;
  font-size: 30px;
}
.area{
  display:inline-block;
  line-height:0.88rem;
  margin-left:0.42rem;
  color:#333;
}
.addList{
  width:100%;
  padding-left:0.32rem;
  line-height:0.88rem;
  color:#333;
}
/* 修改的格式 */
.address ul{
  width:95%;
  height:100%;
  max-height: 20.4rem;
  overflow-x: hidden;
  font-size: 14px;
}
.address ul li{
  margin-left:5%;
  padding-top: 5px;
}
.address .title .active{
  color:#0071B8;
  border-bottom:0.02rem solid #0071B8;
}
.address ul .active{
  color:#0071B8;
}
